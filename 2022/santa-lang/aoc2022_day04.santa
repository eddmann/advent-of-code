input: read("aoc://2022/4")

let parse_assignments = lines >> map(split(",") >> map(split("-") >> map(int)));

part_one: {
  parse_assignments(input)
    |> filter(|[[x1, y1], [x2, y2]]| {
      (x1 < x2 + 1 && y1 + 1 > y2) || (x2 < x1 + 1 && y2 + 1 > y1)
    })
    |> size;
}

part_two: {
  parse_assignments(input)
    |> filter(|[[x1, y1], [x2, y2]]| {
      max(x1, x2) < min(y1, y2) + 1
    })
    |> size;
}

