input: read("aoc://2022/1")

let parse_inventories = |input| {
  let parse_inventory = lines >> map(int) >> sum;

  input
    |> split("\n\n")
    |> map(parse_inventory);
}

part_one: {
  parse_inventories(input) |> max
}

part_two: {
  parse_inventories(input)
    |> sort(<)
    |> take(3)
    |> sum
}

