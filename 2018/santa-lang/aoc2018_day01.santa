input: read("aoc://2018/1")

let parse_deltas = lines >> map(int);

part_one: {
  parse_deltas(input) |> reduce(+, 0);
}

part_two: {
  let scan = |fn, initial, collection| {
    let mut previous = initial;
    map(
      |value| { previous = fn(previous, value); },
      collection
    );
  };

  let mut seen = {};

  parse_deltas(input)
    |> cycle
    |> scan(+, 0)
    |> find(|frequency| {
      if seen `contains` frequency {
        return true;
      }
      seen = seen + {frequency};
      false;
    });
}

test: {
  input: "+1\n+1\n+1"
  part_one: 3
}

test: {
  input: "+1\n+1\n-2"
  part_one: 0
}

